@model MovieVM

<div class="container-fluid mt-5">
    <div class="card shadow-sm">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h3 class="mb-0">All Movies</h3>
            <a href="/Admin/Movie/Create" class="btn btn-success btn-sm">Create</a>
        </div>
        <div class="container mt-5">
            
            <form class="row mb-4" onsubmit="filterTable(event)">
                <div class="col-md-2">
                    <input type="text"
                           value="@Model.MovieFilter.Name"
                           class="form-control"
                           placeholder="Name"
                           name="name">
                </div>
                <div class="col-md-2">
                    <input type="text" class="form-control" placeholder="Min Price" name="MinPrice" value="@Model.MovieFilter.MinPrice">
                </div>
                <div class="col-md-2">
                    <input type="text" class="form-control" placeholder="Max Price" name="MaxPrice" value="@Model.MovieFilter.MaxPrice">
                </div>
                <div class="col-md-2">
                    <select name="CtagoryId" class="form-select">
                        <option >All Categories</option>
                        @foreach(var item in Model.Categories)
                        {
                            if(Model.MovieFilter.CtagoryId == item.Id)
                           {
                                <option selected value="@item.Id">@item.Name</option>
                            }
                            else
                            {
                                
                            <option value="@item.Id">@item.Name</option>
                            }
                            
                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <select name="CinemaId" class="form-select ">
                        <option >All Cinemas</option>
                        @foreach (var item in Model.Cinemas)
                        {
                            if (Model.MovieFilter.CinemaId == item.Id)
                            {
                                <option selected value="@item.Id">@item.Name</option>
                            }
                            else
                            {
                                
                            <option value="@item.Id">@item.Name</option>
                            }

                        }
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-dark w-100">
                        Filter
                    </button>
                </div>
            </form>
            <div class="card-body">
                <table class="table table-bordered table-hover text-center align-middle">
                    <thead class="table-light">
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <td>Description</td>
                            <th>Price</th>
                            <th>Categories</th>
                            <th>Cinema</th>
                            <th>Status</th>
                            <th>Date Time</th>
                            <th>Img</th>
                            <th >Actions</th>
                           
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var item in Model.MovieModel)
                    {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.Price.ToString("c")</td>
                                <td>@item.Categories.Name</td>
                                <td>@item.Cinemas.Name</td>
                                @if (item.Status == true)
                                {
                                    <td>
                                        <span class="badge bg-success">Active</span>
                                    </td>
                                }
                                else
                                {
                                    <td>
                                        <span class="badge bg-danger">InActive</span>
                                    </td>
                                }
                                <td>@item.Date</td>
                                <td>

                                    <button class="btn btn-dark btn-sm"
                                            data-bs-toggle="modal"
                                            data-bs-target="#imageModal-@item.Id">
                                        View Img <i class="bi-eye"></i>
                                    </button>

                                    <div class="modal fade" id="imageModal-@item.Id" tabindex="-1">
                                        <div class="modal-dialog modal-dialog-centered modal-lg">
                                            <div class="modal-content">


                                                <div class="modal-body p-0">
                                                    <img src="~/Imgs/MovieImgs/@item.MainImg"
                                                         class="img-fluid w-100 rounded-bottom">
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                </td>
                                <td>
                                    <div class="d-flex justify-content-center gap-2">
                                        <a href="/Admin/Movie/Edit/@item.Id"
                                           class="btn btn-info btn-sm text-white">
                                            <i class="bi bi-pencil-square"></i>
                                        </a>

                                        <a href="/Admin/Movie/Delete/@item.Id"
                                           data-url="/Admin/Movie/Delete/@item.Id"
                                           class="btn btn-danger btn-sm btn-delete">
                                            <i class="bi bi-trash3"></i>
                                        </a>
                                    </div>
                                </td>

                            </tr>
                            }
                        </tbody>
                    
                </table>
            </div>
        </div>
    </div>
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item ">
                    <a class="page-link" href="/Admin/Movie/Index?page=@Model.CurrentPage-1">Previous</a>
                </li>
            }
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item"><a class="page-link" href="/Admin/Movie/Index?page=@i">@i</a></li>
            }
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" href="/Admin/Movie/Index?page=@Model.CurrentPage+1">Next</a>
                </li>
            }
        </ul>
    </nav>

    <script>
        document.addEventListener("DOMContentLoaded", function () {

            const swalWithBootstrapButtons = Swal.mixin({
                customClass: {
                    confirmButton: "btn btn-success ms-2",
                    cancelButton: "btn btn-danger"
                },
                buttonsStyling: false
            });

            document.querySelectorAll(".btn-delete").forEach(link => {

                link.addEventListener("click", function (e) {
                    e.preventDefault(); // 🔥 يمنع الانتقال مباشرة

                    const url = this.getAttribute("href");
                    // أو: const url = this.dataset.url;

                    swalWithBootstrapButtons.fire({
                        title: "Are you sure?",
                        text: "You won't be able to revert this!",
                        icon: "warning",
                        showCancelButton: true,
                        confirmButtonText: "Yes, delete it!",
                        cancelButtonText: "No, cancel!",
                        reverseButtons: true
                    }).then((result) => {

                        if (result.isConfirmed) {
                            window.location.href = url; // ✅ الحذف بعد التأكيد
                        }

                    });
                });

            });

        });
    </script>

