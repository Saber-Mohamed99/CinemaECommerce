@model CinemaECommerce.ViewModels.ResendEmailConfirmationVM

@{
    ViewData["Title"] = "ResendEmailConfirmation";
}
<div class="container my-4">

    <h1>Resend Email Confirmation</h1>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <form asp-action="ResendEmailConfirmation">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="EmailOrUserName" class="control-label"></label>
                    <input asp-for="EmailOrUserName" class="form-control" />
                    <span asp-validation-for="EmailOrUserName" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Login">Back to Login</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
